<div class="theatrelogin">

<h1 style="margin-left:30px">{{theatres.[0].Theatre_Name}}</h1>

<div class="logindetails">
<form Name="logout" id="logout" action="/login/logout" method="POST">
<button  type="submit">logout</button>
</form>
Division : {{theatres.[0].Division}},
Village/Corporation Name : {{theatres.[0].Local_Body}}<br>
District : {{theatres.[0].District}}<br>
Contact No : {{theatres.[0].Contact_No}}
</div>


<div class="showdetails">
  <script Language="JavaScript" src="/javascripts/loginscript.js"></script>
  <table border="2" bordercolor="white" cellpadding="0" cellspacing="0" height="400" width="600">
  <tr>
    <th colspan="4">Show details as on {{s}}</th>
  </tr>
  <tr>
  <th>
    Screen Name
  </th>
  <th>
    Show time
  </th>
  <th>
    Movie
  </th>
  <th>

  </th>
  </tr>
  {{#each theatres}}
  <tr align="center" border="2">
  <td>
    {{this.Screen_Name}}
  </td>
  <td>
    {{this.Time}} {{this.Indication}}
  </td>
 <td>
   <a class="linkframe" href="/movieframe/{{this.Movie_id}}">
   <font Size="3">
        {{this.Movie_Name}}
   </font>
   </a>
 </td>
 <td>
     <button id="{{this.Theatre_id}}.{{this.Screen_id}}.{{this.Time}}" onclick="showconfirm({{this.Theatre_id}},{{this.Screen_id}},'{{this.Time}}')">
         Delete
     </button>
 </td>
 
  </tr>
  {{/each}}
  </table>
  <div class="deleteconfirm" id="deleteconfirm">
      confirm to delete
      <form name="confirm" id="confirm" method="POST">
          <input type="submit" value="confirm" id="confirmsubmit" onclick="unshow()">
      </form>
  </div>

</div>
</div>
